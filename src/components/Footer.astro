<style>
  .main-footer {
    background-color: var(--mds-color-neutral-900, #111827);
    color: white;
    padding: 4rem 1rem 2rem;
  }

  .footer-content {
    max-width: 72rem;
    margin: 0 auto;
  }

  /* Footer Top */
  .footer-top {
    display: grid;
    grid-template-columns: 1fr 2fr;
    gap: 4rem;
    margin-bottom: 3rem;
  }

  .footer-brand {
    max-width: 24rem;
  }

  .footer-logo {
    color: white;
    margin-bottom: 1rem;
  }

  .footer-description {
    color: var(--mds-color-neutral-300, #D1D5DB);
    line-height: 1.6;
  }

  /* Footer Links */
  .footer-links {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 2rem;
  }

  .footer-column {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .footer-title {
    color: white;
    margin-bottom: 0.5rem;
  }

  .footer-nav {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .footer-link {
    color: var(--mds-color-neutral-300, #D1D5DB);
    text-decoration: none;
    transition: color 0.2s ease;
  }

  .footer-link:hover {
    color: white;
  }

  .footer-contact {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .contact-info {
    color: var(--mds-color-neutral-300, #D1D5DB);
  }

  /* Footer Bottom */
  .footer-bottom {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-top: 2rem;
    border-top: 1px solid var(--mds-color-neutral-700, #374151);
    flex-wrap: wrap;
    gap: 1rem;
  }

  .copyright {
    color: var(--mds-color-neutral-400, #9CA3AF);
  }

  .footer-legal {
    display: flex;
    gap: 2rem;
  }

  .legal-link {
    color: var(--mds-color-neutral-400, #9CA3AF);
    text-decoration: none;
    transition: color 0.2s ease;
  }

  .legal-link:hover {
    color: var(--mds-color-neutral-300, #D1D5DB);
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    .footer-top {
      grid-template-columns: 1fr;
      gap: 2rem;
    }

    .footer-links {
      grid-template-columns: repeat(2, 1fr);
    }

    .footer-bottom {
      flex-direction: column;
      text-align: center;
    }

    .footer-legal {
      justify-content: center;
    }
  }

  @media (max-width: 480px) {
    .footer-links {
      grid-template-columns: 1fr;
    }

    .main-footer {
      padding: 3rem 1rem 1.5rem;
    }
  }
</style>