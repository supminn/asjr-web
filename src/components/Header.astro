---
// Header.astro - Main navigation header using Momentum Design app header
export interface Props {
  class?: string;
}

const { class: className = "" } = Astro.props;

// Get current path for active navigation state
const currentPath = Astro.url.pathname;

// Get base URL from Astro environment
const baseUrl = import.meta.env.BASE_URL;

// Navigation items with proper base path handling
const navItems = [
  { label: 'About us', href: `${baseUrl}about` },
  { label: 'What we do', href: `${baseUrl}what-we-do` },
  { label: 'Resources', href: `${baseUrl}resources` },
  { label: 'Blog', href: `${baseUrl}blog` },
  { label: 'Get involved', href: `${baseUrl}get-involved` }
];
---

<script>
  // Import only the components needed for Header
  import '@momentum-design/components/dist/components/appheader/index.js';
  import '@momentum-design/components/dist/components/button/index.js';
  import '@momentum-design/components/dist/components/text/index.js';
  import '@momentum-design/components/dist/components/link/index.js';
  import '@momentum-design/components/dist/components/searchfield/index.js';
</script>

<mdc-appheader class={className}>
  <div slot="leading" class="header-leading">
    <mdc-link href={baseUrl} class="logo-link" inline>
      <mdc-text type="heading-large-medium" tagname="span" class="logo-text">
        ASJR
      </mdc-text>
    </mdc-link>
  </div>
  
  <div slot="trailing" class="header-trailing">
    <nav class="main-nav">
      {navItems.map(({ label, href }) => (
        <mdc-link 
          href={href} 
          class={`nav-link ${currentPath === href ? 'nav-link--active' : ''}`}
          inline
        >
          {label}
        </mdc-link>
      ))}
    </nav>
    <mdc-searchfield placeholder="Search" class="search-input" />
    <div class="help-section">
      <mdc-text type="body-small-regular" tagname="span" class="help-text">
        Arrested or detained? Check what to do.
      </mdc-text>
      <mdc-button variant="primary" size="28" class="help-button">
        Help yourself â†’
      </mdc-button>
    </div>
  </div>
</mdc-appheader>

<style>
  /* Header Layout */
  .header-leading {
    display: flex;
    align-items: center;
    flex: 1;
    justify-content: flex-start;
  }

  .header-center {
    display: flex;
    align-items: center;
    justify-content: center;
    flex: 2;
  }

  .header-trailing {
    display: flex;
    align-items: center;
    gap: 1.5rem;
    flex: 1;
    justify-content: flex-end;
  }

  /* Logo */
  .logo-link {
    text-decoration: none;
  }

  .logo-text {
    color: var(--mds-color-theme-text-primary-normal);
    font-weight: 600;
    flex-shrink: 0;
  }

  /* Navigation */
  .main-nav {
    display: flex;
    align-items: center;
    gap: 2rem;
  }

  .nav-link {
    white-space: nowrap;
    font-size: 1rem;
    color: var(--mds-color-theme-text-primary-normal);
  }

  .nav-link--active {
    color: var(--mds-color-theme-text-accent-normal);
    font-weight: 600;
  }

  /* Search */
  .search-input {
    width: 280px;
    height: 40px;
  }

  .search-input:focus {
    outline: none;
    border-color: var(--mds-color-theme-text-accent-normal);
    box-shadow: 0 0 0 2px var(--mds-color-theme-text-accent-normal, #3B82F6)33;
  }

  .search-input::placeholder {
    color: var(--mds-color-neutral-500, #6B7280);
  }

  /* Help Section */
  .help-section {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    background-color: var(--mds-color-blue-50, #EFF6FF);
    padding: 0.5rem 1rem;
    border-radius: 8px;
    border: 1px solid var(--mds-color-blue-200, #BFDBFE);
  }

  .help-text {
    color: var(--mds-color-blue-700, #1D4ED8);
    white-space: nowrap;
    font-size: 0.875rem;
  }

  .help-button {
    white-space: nowrap;
    font-size: 0.875rem;
  }

  /* App Header Styling */
  mdc-appheader {
    background-color: white;
    border-bottom: 1px solid var(--mds-color-neutral-200, #E5E7EB);
    position: sticky;
    top: 0;
    z-index: 1000;
  }

  /* Responsive Design */
  @media (max-width: 1200px) {
    .main-nav {
      gap: 1.5rem;
    }
    
    .search-input {
      width: 200px;
    }
  }

  @media (max-width: 1024px) {
    .main-nav {
      gap: 1rem;
    }
    
    .search-input {
      width: 160px;
    }
  }

  @media (max-width: 900px) {
    .main-nav {
      display: none;
    }
    
    .header-leading {
      gap: 1rem;
    }
  }

  @media (max-width: 768px) {
    .search-container {
      display: none;
    }
    
    .help-section {
      flex-direction: column;
      gap: 0.5rem;
      padding: 0.375rem 0.75rem;
    }
    
    .help-text {
      font-size: 0.75rem;
      text-align: center;
    }
  }

  @media (max-width: 480px) {
    .help-text {
      display: none;
    }
  }
</style>