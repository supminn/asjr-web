---
import './Footer.css';

import { Image } from 'astro:assets';
import LogoASJR from '../../assets/images/header/logo-asjr.png';
import LogoKnowbility from '../../assets/images/footer/logo-knowbility.png';
import { t, type Lang } from '../../i18n/get';

// Footer.astro - Main footer component
export interface Props {
  class?: string;
  lang?: 'en' | 'es';
}

const currentYear = new Date().getFullYear();

// Get current path and detect language based on leading segment
const currentPath = Astro.url.pathname;
const baseUrl = import.meta.env.BASE_URL;

// Remove baseUrl to get relative path for language detection
const relativePath = currentPath.startsWith(baseUrl)
  ? currentPath.slice(baseUrl.length)
  : currentPath;

const inferredLang: 'en' | 'es' =
  relativePath.startsWith('es/') || relativePath.startsWith('es') ? 'es' : 'en';

const { class: className = '', lang = inferredLang } = Astro.props;

const isSpanish = lang === 'es';
const langPrefix = isSpanish ? 'es/' : '';

// Navigation items with proper base path handling
const navItems = [
  { label: t(lang, 'nav.about'), href: `${baseUrl}${langPrefix}about` },
  {
    label: t(lang, 'nav.whatWeDo'),
    href: `${baseUrl}${langPrefix}what-we-do`,
  },
  {
    label: t(lang, 'nav.resources'),
    href: `${baseUrl}${langPrefix}resources`,
  },
  {
    label: t(lang, 'nav.latestUpdates'),
    href: `${baseUrl}${langPrefix}latest-updates`,
  },
  {
    label: t(lang, 'nav.getInvolved'),
    href: `${baseUrl}${langPrefix}get-involved`,
  },
];

const seekHelpLink = `${baseUrl}${langPrefix}resources`;
---

<script>
  // Import only the components needed for Footer
  import '@momentum-design/components/dist/components/text/index.js';
</script>

<footer>
  <div class="section">
    <div class="inner-container">
      <div class="footer-content">
        <div class="footer-brand">
          <a href={baseUrl} class="logo-asjr">
            <Image
              src={LogoASJR}
              alt="Advocates for Social Justice Reform logo"
            />
          </a>
          <a href="#" class="logo-knowbility">
            <Image src={LogoKnowbility} alt="Knowability logo" />
          </a>
        </div>

        <div class="footer-sitemap">
          <ul>
            {
              navItems.map((item) => (
                <li>
                  <a href={item.href}>
                    <span>{item.label}</span>
                  </a>
                </li>
              ))
            }
          </ul>
        </div>
      </div>

      <div class="footer-copyright">
        {t(lang, 'footer.copyright')}
      </div>
    </div>
  </div>
</footer>
