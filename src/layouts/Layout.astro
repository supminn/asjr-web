---
import MomentumProviders from '../components/MomentumProviders.astro';
import Header from '../components/header/Header.astro';
import Footer from '../components/footer/Footer.astro';
import '../styles/momentum.css';
import { t } from '../i18n/get';

export interface Props {
  title?: string;
  description?: string;
  lang?: 'en' | 'es';
}

// Detect language from path if not explicitly passed
const currentPath = Astro.url.pathname;
const baseUrl = import.meta.env.BASE_URL;

// Remove baseUrl to get relative path for language detection
const relativePath = currentPath.startsWith(baseUrl)
  ? currentPath.slice(baseUrl.length)
  : currentPath;

const inferredLang: 'en' | 'es' =
  relativePath.startsWith('es/') || relativePath.startsWith('es') ? 'es' : 'en';

const {
  title = 'ASJR: Advocates for Social Justice Reform',
  description = 'We advocate for a fairer legal system, ensuring that every individual receives compassionate and competent support throughout the criminal legal process.',
  lang = inferredLang,
} = Astro.props as Props;
---

<!doctype html>
<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href={`${baseUrl}favicon.svg`} />
    <link rel="icon" type="image/x-icon" href={`${baseUrl}favicon.ico`} />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content={description} />
    <title>{title}</title>
  </head>
  <body class="mds-typography mds-effect mds-theme-stable-lightWebex">
    <!-- Skip to main content link for accessibility -->
    <a href="#main-content" class="skip-link">
      {t(lang, 'nav.skipToMainContent')}
    </a>

    <MomentumProviders>
      <div class="asjr-main">
        <div class="section">
          <Header lang={lang} />
        </div>
        <main class="main-content" id="main-content" tabindex="-1">
          <slot />
        </main>
        <div class="section">
          <Footer lang={lang} />
        </div>
      </div>
    </MomentumProviders>

    <style>
      .skip-link {
        position: absolute;
        top: -50px;
        left: 0;
        background: var(--mds-color-theme-background-accent-normal, #0353a8);
        color: var(--mds-color-theme-inverted-text-primary-normal, #ffffff);
        padding: 0.75rem 1.5rem;
        text-decoration: none;
        font-weight: 600;
        font-size: 1rem;
        z-index: 9999;
        transition: top 0.2s ease-in-out;
        border-radius: 0 0 0.25rem 0.25rem;
      }

      .skip-link:focus {
        top: 0;
        outline: 2px solid var(--mds-color-theme-focus-default-1, #ffffff);
        outline-offset: 2px;
      }

      .skip-link:hover {
        background: var(--mds-color-theme-background-accent-hover, #024a8f);
      }

      /* Ensure main content can receive focus */
      main:focus {
        outline: none;
      }
    </style>
  </body>
</html>
