---
import MomentumProviders from '../components/MomentumProviders.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import '../styles/momentum.css';

export interface Props {
	title?: string;
	description?: string;
}

const { 
	title = 'ASJR Web', 
	description = 'AIR Hackathon ASJR Web Application'
} = Astro.props;

---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<meta name="description" content={description} />
		<title>{title}</title>
	</head>
	<body class="mds-typography mds-effect mds-theme-stable-lightWebex">
		<MomentumProviders>
			<Header />
			<main class="main-content">
				<slot />
			</main>
			<Footer />
		</MomentumProviders>
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
		font-family: 'Momentum', system-ui, -apple-system, sans-serif;
		-webkit-font-smoothing: antialiased;
		-moz-osx-font-smoothing: grayscale;
	}

	.main-content {
		min-height: calc(100vh - var(--mdc-appheader-height, 4rem));
		display: flex;
		flex-direction: column;
	}
</style>
