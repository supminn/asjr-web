---
// import { storyblokEditable } from '@storyblok/astro';
import BlogPost from './BlogPost.astro';

const { blok } = Astro.props;
---

<section class="blog-listing">
  <div class="page-container">
    <section class="hero">
      <mdc-text type="heading-xlarge-bold" tagname="h1">
        {blok.title || 'Latest Stories'}
      </mdc-text>
      {blok.description && (
        <mdc-text type="body-large-regular" tagname="p" class="hero-subtext">
          {blok.description}
        </mdc-text>
      )}
    </section>

    <section class="blog-posts">
      <div class="post-grid">
        {blok.posts && blok.posts.map((post) => (
          <BlogPost blok={post} />
        ))}
      </div>

      {blok.show_pagination && (
        <div class="pagination">
          <mdc-button variant="outlined" disabled>Previous</mdc-button>
          <mdc-text type="body-midsize-regular" tagname="span" class="page-info">
            Page 1 of {Math.ceil((blok.posts?.length || 0) / (blok.posts_per_page || 6))}
          </mdc-text>
          <mdc-button variant="outlined">Next</mdc-button>
        </div>
      )}
    </section>

    {blok.show_newsletter && (
      <aside class="newsletter-signup">
        <mdc-text type="heading-large-medium" tagname="h2">
          Stay Updated
        </mdc-text>
        <mdc-text type="body-midsize-regular" tagname="p">
          Subscribe to our newsletter for the latest updates and stories.
        </mdc-text>
        <form class="newsletter-form">
          <mdc-input label="Email address" type="email" required />
          <mdc-button type="submit" variant="primary">Subscribe</mdc-button>
        </form>
      </aside>
    )}
  </div>
</section>

<style>
  .page-container {
    max-width: 72rem;
    margin: 0 auto;
    padding: 2rem 1rem;
  }

  .hero {
    text-align: center;
    padding: 4rem 0;
    border-bottom: 1px solid var(--mds-color-neutral-200);
    margin-bottom: 4rem;
  }

  .hero-subtext {
    margin-top: 1.5rem;
    max-width: 48rem;
    margin-left: auto;
    margin-right: auto;
  }

  .blog-posts {
    margin-bottom: 4rem;
  }

  .post-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
    gap: 2rem;
    margin-bottom: 3rem;
  }

  .pagination {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 2rem;
  }

  .page-info {
    color: var(--mds-color-neutral-600);
  }

  .newsletter-signup {
    background-color: var(--mds-color-blue-50);
    border: 1px solid var(--mds-color-blue-200);
    padding: 3rem;
    border-radius: 1rem;
    text-align: center;
  }

  .newsletter-form {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    max-width: 400px;
    margin: 2rem auto 0;
  }

  @media (min-width: 768px) {
    .newsletter-form {
      flex-direction: row;
      max-width: 500px;
    }
  }

  mdc-text[type="heading-xlarge-bold"] {
    font-size: clamp(2.5rem, 5vw, 3.5rem);
    line-height: 1.1;
  }

  mdc-text[type="heading-large-medium"] {
    font-size: clamp(1.75rem, 3vw, 2.25rem);
    line-height: 1.25;
  }
</style>

<script>
  import '@momentum-design/components/dist/components/text/index.js';
  import '@momentum-design/components/dist/components/button/index.js';
  import '@momentum-design/components/dist/components/input/index.js';
</script>